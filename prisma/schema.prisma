generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DayEntry {
  id               String       @id @default(cuid())
  userId           String       // Neon Auth user id
  date             DateTime
  mood             Int?
  energy           Int?
  note             String?
  isMinimumViableDay Boolean?   @default(false)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  investments      Investment[]
  tags             String       @default("[]") // JSON array stored as string

  @@unique([userId, date]) // one entry per user per day
}

model InvestmentCategory {
  id          String       @id @default(cuid())
  name        String       @unique
  displayName String
  description String?
  color       String
  icon        String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  investments Investment[]
}

model Investment {
  id         String             @id @default(cuid())
  dayId      String
  day        DayEntry           @relation(fields: [dayId], references: [id], onDelete: Cascade)
  categoryId String
  category   InvestmentCategory @relation(fields: [categoryId], references: [id])
  score      Int
  comment    String?
}

