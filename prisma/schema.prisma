generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model DayEntry {
  id               String       @id @default(cuid())
  date             DateTime     @unique
  mood             Int?
  energy           Int?
  note             String?
  isMinimumViableDay Boolean?   @default(false)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  investments      Investment[]
  tags             String       @default("[]") // JSON array stored as string for SQLite
}

model Investment {
  id       String   @id @default(cuid())
  dayId    String
  day      DayEntry @relation(fields: [dayId], references: [id], onDelete: Cascade)
  category String
  score    Int
  comment  String?
}

